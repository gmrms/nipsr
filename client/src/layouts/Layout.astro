---
export interface Props {
	title: string;
}

const { title } = Astro.props;
---

<!DOCTYPE html>
<html lang="en">
	<head>
		<meta charset="UTF-8" />
		<meta name="viewport" content="width=device-width" />
		<link rel="icon" type="image/svg+xml" href="/favicon.svg" />
		<meta name="theme-color" content="#000814">
		<meta name="generator" content={Astro.generator} />
		<title>{title}</title>
	</head>
	<body>
		<slot />
	</body>
</html>
<style is:global>
	* {
		box-sizing: border-box;
		scroll-behavior: smooth;
		transition: all 0.2s;
		font-family: system-ui, sans-serif;
		color: var(--white);
	}
	:root {
		--primary-gradient: linear-gradient(120deg, rgba(255,255,255,0.03) 20%, rgba(255,255,255,0.1) 60%, rgba(255,255,255,0.05) 80%);
		--white: #f0f0f0;
		--light-gray: #9e9e9e;
		--gray: #5f5f5f;
		--dark: #000814;
		--medium: #001D3D;
		--medium-0: #001D3D00;
		--light: #003566;
		--accent: #FFC300;
		--accent-h: #ffd54d;
		--accent-2: #8daa91;
		--spacing: 2.5rem;
		--spacing2x: 5rem;
		--spacing3x: 7.5rem;
	}
	html {
		padding: 0;
		margin: 0;
		background: var(--dark);
		background: linear-gradient(135deg, rgba(0,8,20,1) 45%, rgba(0,53,102,1) 100%);
	}

	p {
		font-size: 1.2rem;
	}

	p span {
		color: var(--accent-2);
	}

	p span.accent {
		color: var(--accent);
	}

	h1, h2, h3, h4, h5, h6 {
		font-weight: 800;
		text-align: center;
	}

	h1 {
		font-size: 5rem;
		margin: var(--spacing);
	}

	h2 {
		font-size: 3rem;
		font-weight: 800;
		margin: var(--spacing);
	}

	h1 span, h2 span, h3 span {
		color: var(--accent)
	}

	.page {
        height: 100vh;
        display: flex;
		flex-direction: column;
        align-items: center;
		justify-content: center;
	}

    a.accent {
        color: var(--accent);
        text-decoration: underline;
    }

    a.accent:hover {
        color: var(--accent-h);
    }

	@media (max-width: 600px) {
		h1 {
			font-size: 4rem;
		}
		h2 {
			font-size: 3rem;
		}
	}
</style>
