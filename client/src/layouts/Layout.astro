---
export interface Props {
	title: string;
}

const { title } = Astro.props;
---

<!DOCTYPE html>
<html lang="en">
	<head>
		<meta charset="UTF-8" />
		<meta name="viewport" content="width=device-width" />
		<link rel="icon" type="image/svg+xml" href="/favicon.svg" />
		<meta name="generator" content={Astro.generator} />
		<title>{title}</title>
	</head>
	<body>
		<slot />
	</body>
</html>
<style is:global>
	* {
		box-sizing: border-box;
	}
	:root {
		--white: #f0f0f0;
		--light-gray: #9e9e9e;
		--gray: #5f5f5f;
		--dark: #000814;
		--medium: #001D3D;
		--light: #003566;
		--accent: #FFC300;
		--accent-2: #8daa91;
		--spacing: 2.5rem;
		--spacing2x: 5rem;
		--spacing3x: 7.5rem;
	}
	html {
		padding: 0;
		margin: 0;
		font-family: system-ui, sans-serif;
		background: var(--dark);
		color: var(--white);
	}

	p {
		font-size: 1.2rem;
	}

	p span {
		color: var(--accent-2);
	}

	h1, h2, h3, h4, h5, h6 {
		font-weight: 800;
		text-align: center;
	}

	h1 {
		font-size: 5rem;
		margin: var(--spacing);
	}

	h2 {
		font-size: 3rem;
		font-weight: 800;
		margin: var(--spacing);
	}

	h1 span, h2 span, h3 span {
		color: var(--accent)
	}
</style>
